@model BookReview
<div class="rating-row pt-2">
    <p class="d-block">Your Rating</p>
    <span class="rating-widget-block">
        <input type="radio" form="reviewForm" name="rate" value="5" id="star1">
        <label for="star1"></label>
        <input type="radio" form="reviewForm" name="rate" value="4" id="star2">
        <label for="star2"></label>
        <input type="radio" form="reviewForm" name="rate" value="3" id="star3">
        <label for="star3"></label>
        <input type="radio" form="reviewForm" name="rate" value="2" id="star4">
        <label for="star4"></label>
        <input type="radio" form="reviewForm" name="rate" value="1" id="star5">
        <label for="star5"></label>
    </span>
    <form asp-action="review" id="reviewForm" method="post" class="mt--15 site-form ">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Text">Comment</label>
                    <textarea asp-for="Text" cols="30" rows="10"
                              class="form-control"></textarea>
                </div>
            </div>
            <input type="hidden" name="bookId" value="@Model.BookId" />
            <div class="col-lgs-4">
                <div class="submit-btn">
                    <button type="submit" class="btn btn-black">Post Comment</button>
                </div>
            </div>
        </div>
    </form>
</div>