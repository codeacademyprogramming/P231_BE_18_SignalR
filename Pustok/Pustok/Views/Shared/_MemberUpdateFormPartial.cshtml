@model MemberUpdateViewModel
<div class="myaccount-content">
    <h3>Account Details</h3>
    <div class="account-details-form">
        <form asp-action="memberupdate" method="post">
            <div class="row">
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="FullName"placeholder="Full Name" >
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                  <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="UserName" placeholder="UserName">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="Email" placeholder="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                  <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="Phone" placeholder="Phone">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
                <div class="col-12  mb--30">
                    <h4>Password change</h4>
                </div>
                <div class="col-12  mb--30">
                    <input asp-for="CurrentPassword" placeholder="CurrentPassword">
                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                </div>
                <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="NewPassword" placeholder="NewPassword">
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
               <div class="col-lg-6 col-12  mb--30">
                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="col-lg-12 col-12  mb--30">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn--primary">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
